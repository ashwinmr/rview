{
    "name": "rview",
    "version": "1.1.2",
    "description": "A simple image viewer",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "packager": "electron-packager . --asar --overwrite=true --icon=build_resources/icons/main_icon.png",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "directories": {
            "output": "build",
            "buildResources": "build_resources"
        },
        "icon": "build_resources/icons/main_icon.png",
        "win": {
            "target": "appx",
            "certificateFile": "build_resources/selfsigncert.pfx",
            "certificatePassword": "password",
            "fileAssociations": [
                {
                    "ext": [
                        "jpg",
                        "jpeg",
                        "gif",
                        "png",
                        "apng",
                        "svg",
                        "bmp",
                        "ico"
                    ]
                }
            ]
        },
        "linux": {
            "category": "Graphics",
            "fileAssociations": [
                {
                    "ext": "jpg"
                },
                {
                    "ext": "jpeg"
                },
                {
                    "ext": "gif"
                },
                {
                    "ext": "png"
                },
                {
                    "ext": "apng"
                },
                {
                    "ext": "svg"
                },
                {
                    "ext": "bmp"
                },
                {
                    "ext": "ico"
                }
            ]
        },
        "appx": {
            "identityName": "37353raotech.rview",
            "publisher": "CN=FCA45FA4-92B8-42C6-A970-7C1960C49FB5",
            "publisherDisplayName": "raotech",
            "applicationId": "rview"
        }
    },
    "keywords": [],
    "author": "raotech",
    "license": "MIT",
    "devDependencies": {
        "electron": "^7.1.2",
        "electron-builder": "^22.2.0",
        "electron-packager": "^14.1.0"
    },
    "dependencies": {
        "mousetrap": "^1.6.3",
        "trash": "^6.1.1"
    }
}
